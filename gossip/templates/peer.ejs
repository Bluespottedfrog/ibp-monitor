      <thead>
        <th>Id</th>
        <th>Sender</th>
        <!-- <th>Record</th> -->
        <th>Version</th>
        <th>Performance</th>
        <th>Timestamp</th>
      </thead>

      <tbody>
        <% healthChecks.forEach(hc => { %>
          <tr>
            <td><%= hc.id %></td>
            <td><a href="/peer/<%= hc.senderId %> "><%= shortStash(hc.senderId) %></a></td>
            <!-- <td><%= JSON.stringify(hc.record) %> </td> -->
            <td><%= hc.record.version %></td>
            <td><%= hc.record.performance %></td>
            <td><%= moment(hc.createdAt).format(dateTimeFormat) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </section>

